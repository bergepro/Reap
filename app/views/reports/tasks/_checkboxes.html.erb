<div data-controller="check-boxes">
  <% if tasks.length < 1%>
    <p>No tasks found</p>
  <% else %>
    <label class="mr-4 font-semibold">
       <%= check_box_tag "check_tasks", 0, false, id: "check_all_tasks" %>
      <%= 'Check all' %>
    </label>
    <% tasks.each_with_index  do |task, index| %>
      <label class="mr-4 border border-yellow-600 rounded p-1">
        <%= check_box_tag "task_ids[]", task.id, false, id: "check_task_#{index}" %>
        <%= task.name %>
      </label>
    <% end %>
  <% end %>
</div>

