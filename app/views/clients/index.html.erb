<div class="flex flex-col items-center pt-4">
  <div class="max-w-md">
    <div>
      <div class="w-96"></div>
      <div class="w-96"></div>
    </div>
    <div class="p-1 m-4 tex-left">
      <h1 class="font-medium border-b border-gray-300 text-lg">Clients: </h1>
      <% @clients.each do |client| %>
          <div class="border-b text-gray-700 border-gray-300 pb-1 pt-1">
          <%= link_to client.name, client, class: 'italic text-stone-700 text-left' %>
        </div>
      <% end %>
    </div>

    <div class="pt-10 flex justify-evenly">
        <%= link_to "new client", new_client_path, class: 'bg-blue-200 rounded p-2 hover:bg-blue-300' %>
    </div>  
  </div>
</div>