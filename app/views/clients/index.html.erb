<div class="flex flex-col items-center pt-4">
  <div class="max-w-md md:min-w-custom35">
    <div class="p-1 my-2 pt-2">
      <h1 class="font-bold text-3xl italic pb-4"><span class="ml-2">Clients</span> </h1>
      <% @clients.each do |client| %>
          <div class="border-b text-gray-700 border-gray-300 pb-2 pt-2">
          <%= link_to client.name, client, class: 'text-left' %>
        </div>
      <% end %>
    </div>
    <div class="pt-10 flex justify-evenly">
        <%= link_to "New client", new_client_path, class: 'rounded bg-seaGreen p-2 hover:bg-seaGreenDark text-white' %>
    </div>  
  </div>
</div>