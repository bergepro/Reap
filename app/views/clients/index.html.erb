<div class="flex justify-evenly pt-4">
  <div div ="flex justify-between">
    <h1 class="font-bold text-lg">Clients:</h1><br>
    
    <% @clients.each_with_index do |client, index| %>
    <% if index.even? %>
      <div class="bg-slate-100 px-28 py-1">
    <% elsif %>
      <div class="bg-gray-200 px-28 py-1">
    <% end %>
    <%= link_to client.name, client, class: 'italic text-stone-700' %><br>
    </div>
    <% end %>


    <div class="pt-10 flex justify-evenly">
        <%= link_to "new client", new_client_path, class: 'bg-blue-200 rounded p-2' %>
    </div>  
  </div>
</div>