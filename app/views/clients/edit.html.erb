<div class="flex flex-col items-center pt-4">
  <div class="max-w-md md:min-w-custom35 my-4" data-controller="collapse-delete">
    <div class='flex justify-between' >
      <h1 class="font-medium italic text-2xl ml-4">Edit <%= @client.name %></h1><br>
      <button data-action="click->collapse-delete#deleteClient" 
        class="rounded bg-gray-300 p-2 hover:bg-red-400" 
        data-task-id="delete-button">Delete client
      </button>
    </div>
    <div class="hidden" data-collapse-delete-target="toggleDiv">
      <%= render "clients/remove", client: @client %>
    </div>
    <%= render "form", client: @client%>
  </div>
</div>