<div class="flex flex-col items-center pt-4">
  <div class="max-w-md md:min-w-custom35">
    <div class="flex justify-between">
      <h1 class="font-medium italic text-2xl ml-4">Edit <%= @client.name %></h1><br>
      <div data-controller="modal" class=" mr-2">
        <button data-action="click->modal#toggle" class="rounded bg-gray-300 p-2 hover:bg-red-400" >
            Delete 
        </button> 
        <div class="hidden modal hidden fixed inset-0 bg-black pb-40 bg-opacity-50 flex items-center justify-center z-50" 
                data-modal-target="modal">
          <%= render "clients/remove", client: @client %>
        </div>        
      </div>
    </div>

    <%= render "form", client: @client%>
  </div>
</div>