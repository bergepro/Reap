<div class="flex flex-col items-center pt-4">
  <div class="max-w-md">
    <div class="p-1 my-4">
    <h1 class="font-bold">New time entry:</h1>
    <%= render "form", { client: @client, project: @project } %>
    </div>

    <div class="text-center p-1 m-1">
      <%= 
        link_to "Delete time entry ", client_project_time_reg_path(@client, @project, @time_reg), 
          class: 'rounded bg-red-400 p-2 hover:bg-red-500', 
          data:{
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }
      %>        
    </div>

    <div class="mt-4">
      <%= 
        link_to "Back to Project", [@client, @project], 
          class: "text-gray-600 italic text-sm text-left" 
      %>        
    </div> 
  </div>
</div>


