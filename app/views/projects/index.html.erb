<div class="flex justify-evenly pt-4">
  <div class="max-w-md">
    <div>
      <div class="w-96"></div>
      <div class="w-96"></div>
    </div>
    <h1 class="font-bold text-lg mb-5">Your projects: </h1>

    <% @clients.each do |client| %>
      <div class="mb-6">
        <% @projects = current_user.projects.where(projects: {client_id: client.id}) %>

        <div class="flex justify-between border-b border-gray-300 pb-1">
          <h2 class="font-semibold text-lg"><%= client.name %></h2>
        </div>

        <% @projects.each do |project| %>
          <div class="border-b text-gray-700 border-gray-300 pb-1 pt-1 ">
            <%= 
              link_to project.name, project_path(project), 
              class: 'italic text-stone-700 ml-4' 
            %>
          </div>
        <% end %>       
      </div>
    <% end %>
    <div class="flex justify-evenly">
      <%= link_to "New Project", new_project_path, class: ' bg-blue-200 rounded p-2 hover:bg-blue-300'%>
    </div>
    <%= form_with project_import_path do |form| %>
      <%= submit_tag "Import CSV", class: 'rounded bg-blue-300 p-2 my-8'%>
      <%= file_field_tag :file %>
    <% end %>
  </div>
</div>
