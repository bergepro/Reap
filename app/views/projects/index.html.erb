<div class="flex flex-col items-center pt-4 mb-28">
  <div class="max-w-md md:min-w-custom35">
    <div class="p-1 my-2 pt-2" data-controller="collapse-delete">
    <!-- NOT A DELETE BUTTON BUT I USES THE SAME STIMULUS CONTROLLER AS THE DELETE BUTTONS-->
      <div class='flex justify-between mb-8'>
        <h1 class="font-medium italic text-2xl ml-4">Your projects</h1><br>
        <button data-action="click->collapse-delete#deleteDiv" 
          class="rounded bg-seaGreen p-2 hover:bg-seaGreenDark shadow text-white" 
          data-task-id="delete-button">Import
        </button>
      </div>
      <div class="hidden" data-collapse-delete-target="toggleDiv">
        <%= render "projects/import" %>
      </div>
      <% @clients.each do |client| %>
        <div class="mb-6">
          <% @projects = current_user.projects.where(projects: {client_id: client.id}) %>
          <div class="flex justify-between border-b border-gray-300 pb-1">
            <%= link_to client.name, client, class: 'font-semibold text-xl"' %>
          </div>
          <% @projects.each do |project| %>
            <div class="border-b border-gray-300 pb-1 pt-1 ">
              <%= link_to project.name, project, class: 'italic text-stone-700 ml-4' %>
            </div>
          <% end %>       
        </div>
      <% end %>    
    </div>
    <div class="flex justify-evenly">
      <%= link_to "New Project", new_project_path, class: 'rounded bg-seaGreen p-2 hover:bg-seaGreenDark shadow text-white'%>
      <%= link_to "New Client", new_client_path, class: 'rounded bg-seaGreen p-2 hover:bg-seaGreenDark shadow text-white'%>
    </div>
  </div>
</div>
