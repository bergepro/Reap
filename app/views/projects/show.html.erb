<div class="flex flex-col items-center pt-4">
  <div class="max-w-md">
    <div class="p-1 my-2">
      <div class="flex items-center justify-between mr-2">
        <p class="text-xl mr-4"> <%= @project.name %></p>
        <%= link_to "Edit project", edit_client_project_path(@client, @project), class: 'rounded bg-blue-300 p-2 mr-2' %>
        <%= 
          link_to "Delete project", client_project_path(@project), class: 'rounded bg-red-400 p-2',
            data:{
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            }
          %>
    </div>			
    </div>
    <div class="p-1 my-4">		
      <h2 class="text-md"> <%= @project.description %></h2>
    </div>	

    <div class="p-1 my-4">
      <h4 class="font-medium">Project members: </h4>
      <h4 class="italic m-1 border-t border-gray-300"><%= render @project.memberships %></h4>
    </div>		

    <div class="p-1 my-4">			
      <h4 class="font-medium">Your time-entries: </h4>
      <div class="m-1 border-t border-gray-300"><%= render @project.time_regs %></div>
    </div>	

    <div class="p-1 my-4">
      <h4 class="font-medium border-b border-gray-300">Project tasks:</h4>
      <div class="mb-8">
        <% @assigned_tasks.each do |assigned_task| %>
          <div class="border-b border-gray-300">
            <%= link_to assigned_task.name, 
              client_project_assigned_task_path(@client, @project, assigned_task)
            %>				
        </div>
      <% end %>		
      </div>

      <div class="flex justify-between">
        <%= link_to "Assign task", new_client_project_assigned_task_path(@client, @project), class: 'rounded bg-blue-300 p-2 ml-2 mr-2' %>
        <%= link_to "New time-entry", new_client_project_time_reg_path(@client, @project), class: 'rounded bg-blue-300 p-2' %>
        <br>  
      </div>
      <br>
      <%= link_to "Export Time Regs to CSV", export_client_project_time_regs_path(client_id: @project.client.id, project_id: @project.id, format: :csv), class: 'rounded bg-blue-300 p-2' %>
      <br>
      <br>
      <%= form_tag({ controller: 'time_regs', action: 'import', client_id: @client.id, project_id: @project.id }, multipart: true) do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import CSV" %>
      <% end %>
      <br>
      <%= link_to "back to client", client_path(@client), class: "text-gray-600 italic text-sm" %>
    </div>
  </div>
