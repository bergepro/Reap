<%= form_with model: @project do |form| %>
  <div>
    <%= form.label :client %> <br>
    <%= form.collection_select :client_id, @clients, :id, :name, { include_blank: false }, { class: 'w-full' }  %>
    <% @project.errors.full_messages_for(:client).each do |message|%>
      <div class="text-sm italic text-gray-600">
        <%= message %>
      </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :name %> <br>
    <%= form.text_area :name, class: 'w-full' %>
    <% @project.errors.full_messages_for(:name).each do |message|%>
      <div class="text-sm italic text-gray-600">
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %> <br>
    <%= form.text_area :description, class: 'w-full' %>
    <% @project.errors.full_messages_for(:description).each do |message|%>
    <div class="text-sm italic text-gray-600">
      <%= message %>
    </div>            
  <% end %>
  </div>  

  <div class="actions text-center p-1 m-1">
      <%= form.submit class: "rounded bg-blue-200 p-2 m-2 hover:bg-blue-300 shadow" %>
  </div>
<% end %>
