<div class="mt-5 mb-5 bg-neutral-50 border border-gray-400 rounded p-2">
  <div class="text-center">
    <h4 class="">Provide a CSV file with these columns</h4>
    <br>
    <p class="font-semibold">date;client;project;task;notes;minutes;first name;last name;email</p>
    <br>    
    <div >
      <%= form_with url: projects_import_path do |form| %>
        <%= submit_tag "Import CSV", class: 'rounded bg-blue-200 hover:bg-blue-300 p-2 mr-2'%>
        <%= form.file_field :file %>
      <% end %>    
    </div>
  </div>
  <br>
</div>  