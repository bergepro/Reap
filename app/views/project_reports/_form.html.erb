<%= form_with model: @report do |form| %>
  <div id="timeframe-container">
    <div id="timeframe-error-container">
      <% @report.errors.full_messages_for(:timeframe).each do |message| %>
        <div class="text-sm italic text-gray-600"><%= message %></div>
      <% end %>
    </div>
    <div id="timeframe-select" class="flex justify-between">
      <%= form.label :timeframe %>
      <%= form.select :timeframe, @timeframeOptions, {} , {class: 'mr-6 w-80', id: 'timeframe-selection'} %>
    </div>
    <div id="custom-timeframe-error-container">
      <% @report.errors.full_messages_for(:custom_timeframe).each do |message| %>
        <div class="text-sm italic text-gray-600"><%= message %></div>
      <% end %>
    </div>
    <div id="custom-timeframe-container" class="<%= "hidden" if @show_custom_timeframe == false %>">
      <%= render partial: 'timeframe' %>
    </div> 
  </div>
 
  <div id="client-container" class="flex justify-between clear-both pt-10">
    <div>
      <%= form.label :user_id %>
    </div>
    <div>
      <%= form.collection_select :client_id, @clients, :id, :name, {include_blank: 'Select a client' }, {class: 'mr-6 w-80', id: 'client-selection'} %>   
    </div>
  </div>

  <div id="submit-container" class="flex justify-center mt-10">
    <%= form.submit 'Create report', class: 'rounded bg-blue-200 p-2 m-2 hover:bg-blue-300  shadow'  %>
  </div>
<% end %>