<header>
  <nav
      class="
             flex flex-wrap
             items-center
             justify-between
             w-full
             py-4
             md:py-0
             px-4
             text-lg text-gray-900
             bg-tastyWhite
             "
      >
      <%= link_to root_path, class: "md:p-4 py-2 block hover:text-purple-400" do %>
      <div class="flex space-x-4 items-center">
        <svg class="svg-icon" width="35px" height="35px" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
          <path fill="currentColor" d="M257.563 25.156c353.16 276.87 16.918 408.895-87.875 293.25l-40.75 37.125 50.812 50.345c217.562 181.363 524.73-252.058 77.813-380.72zM110.75 364.28c-5.525 1.065-8.975 2.957-11.313 5.25-1.956 1.922-3.248 4.556-4.25 7.564l55.188 52.844c5.468-1.008 9.264-2.796 11.28-4.688 1.997-1.872 3.095-3.864 3.095-7.53l-54-53.44zm-24.72 30.314L30.407 445.28C13.67 472.28 45.1 506.478 81.5 489.94l51.53-50.282-47-45.062z" />
        </svg>
        <div>Reap</div>
      </div>
    <% end %>

    <svg
        xmlns="http://www.w3.org/2000/svg"
        id="menu-button"
        class="h-6 w-6 cursor-pointer md:hidden block"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
            />
    </svg>

      <div class="hidden w-full md:flex  md:w-auto " id="menu">
        <ul
            class="
                   pt-4
                   text-base text-gray-900
                   md:flex
                   md:justify-end 
                   md:pt-0"
                    
            >
            <% if current_user %>
            <li>
              <%= link_to "Times", time_regs_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            </li>
            <li>
              <%= link_to "Tasks", tasks_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            </li>
            <li>
              <%= link_to "Clients", clients_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            </li>
            <li>
              <%= link_to "Projects", projects_path, class: "md:p-4 py-2 block hover:text-purple-400"%>
            </li>
            <li>
              <%= link_to "Reports", new_user_report_path, class: "md:p-4 py-2 block hover:text-purple-400"%>
            </li>

            <li dir="ltr">
              <div class="group relative md:p-4 py-2 block border-s-2 border-gray-100 md: border-s-0 ">
                <div class="flex text-gray-900 ">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 self-center mr-2">
  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
</svg>
                  <button type="button" class="min-w-6"><%= current_user.email%></button>
                </div>
                <div class="hidden group-hover:block absolute w-full bg-tastyWhite rounded whitespace-nowrap">
                  <%= link_to "Edit Account", edit_user_registration_path, class: "block p-1 hover:text-purple-400 text-center" %>
                  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block p-1 hover:text-purple-400 w-full text-center" %>
                </div>
              </div>
            <% else %>
              <%= link_to "Register", new_registration_path(resource_name), class: "hover:text-purple-400 h-full flex  p-2 self-center" %>
              <%= link_to "Login", new_user_session_path ,  class: "hover:text-purple-400 h-full flex self-center p-2" %>
            <% end %>
            </li>
        </ul>
      </div>
  </nav>
</header>
<script>
  var button = document.querySelector('#menu-button');
  var menu = document.querySelector('#menu');


  button.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>
